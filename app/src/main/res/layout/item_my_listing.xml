<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivMyListingImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="4dp"
        tools:srcCompat="@drawable/stock_camera" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        >

        <TextView
            android:id="@+id/tvMyListingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            tools:text="Olympus OM-D" />

        <TextView
            android:id="@+id/tvMyListingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMyListingName"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            tools:text="$29 / day" />

<!--        <Button-->
<!--            android:id="@+id/btnView"-->
<!--            android:layout_width="25dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginEnd="20dp"-->
<!--            android:background="@drawable/view"-->
<!--            android:backgroundTint="#21000000"-->
<!--            />-->

    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>